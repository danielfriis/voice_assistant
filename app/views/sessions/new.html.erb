<div class="h-dvh flex items-center justify-center relative">
  <div class="absolute inset-4" style="background-image: url(<%= asset_path("dandelion-seed-heads.png") %>); background-size: cover; background-position: center;"></div>
  <div class="flex flex-col items-center justify-center gap-10 z-20">
    <div class="flex flex-col items-center justify-center gap-4">
      <h1 class="text-6xl font-serif font-bold text-white text-center">
        Meet Jamie, <br> your new personal <br> AI assistant
      </h1>
      <p class="text-white text-center text-xl">
        You talk to Jamie to plan your day and get more done.
      </p>
    </div>
    <%= form_tag "/auth/google_oauth2", method: :post, data: { turbo: false } do %>
      <button type="submit" class="cursor-pointer w-full flex items-center justify-center gap-3 rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
        <%= image_tag "https://www.google.com/favicon.ico", class: "h-5 w-5" %>
        Sign in with Google
      </button>
    <% end %>
  </div>
</div>